<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>댓글보기</title>
    <style>
        /* 별점 리뷰 */
.review_view {
  position: absolute;
  top: 1200px;
  left: 750px;
}

.star fieldset {
  display: inline-block;
  direction: rtl;
  /*정렬을 right에서 left로*/
  border: 0;
}

.star fieldset legend {
  text-align: right;
}

.star input[type=radio] {
  display: none;
  position: absolute;
  top: -300px;
}

.star label {
  font-size: 3em;
  color: transparent;
  /*transparent 별을 투명하게*/
  text-shadow: 0 0 0 #f0f0f0;
}

.star label:hover~label {
  text-shadow: 0 0 0 rgba(250, 208, 0, 0.99);
}

.book_intro_star label:hover {
  text-shadow: 0 0 0 rgba(250, 208, 0, 0.99);
}

.book_intro_star input[type=radio]:checked~label {
  text-shadow: 0 0 0 rgba(250, 208, 0, 0.99);
}

.review_add label {
  font-size: 15px;
  color: black;
}

#book_intro_review_box {
  width: 812px;
  box-sizing: border-box;
  display: inline-block;
  margin: 15px 0;
  background: #F3F4F8;
  border: 0;
  border-radius: 10px;
  height: 100px;
  resize: none;
  padding: 15px;
  font-size: 13px;
  font-family: sans-serif;
}

#review_update_btn {
  display: block;
  width: 400px;
  font-weight: bold;
  border: 0;
  border-radius: 10px;
  max-height: 50px;
  padding: 15px 0;
  font-size: 15px;
  text-align: center;
  background: blue;
  color: white;
}

 .review_h2 {
  position: absolute;
  top: 1050px;
  left: 750px;
  color: rgb(182, 153, 118);
  width: 200px;
}
    </style>

</head>

<body>
<!-- 별점 리뷰 -->
<div class="review_view">
    <h2 class="review_view_h2">리뷰 보기</h2>
    <div class="book_intro_review">



            <fieldset aria-required="">
        <span class="book_intro_star_select">별점을
          선택해주세요</span>
                <input type="radio" name="reviewStar" value="5" id="rate1"><label for="rate1">★</label>
                <input type="radio" name="reviewStar" value="4" id="rate2"><label for="rate2">★</label>
                <input type="radio" name="reviewStar" value="3" id="rate3"><label for="rate3">★</label>
                <input type="radio" name="reviewStar" value="2" id="rate4"><label for="rate4">★</label>
                <input type="radio" name="reviewStar" value="1" id="rate5"><label for="rate5">★</label>

            </fieldset>
            {{#commentsDtos}}
                <div id="review_nickname"><span>닉네임 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                   &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                    <span>{{modifiedDate}}</span></div>

                <div id="review_box">{{body}}</div>
            {{/commentsDtos}}

            {{#register}}
                <input type="hidden" id="register_id" value="{{id}}">
            {{/register}}
            <div>
                <button type="button" id="review_update_btn">리뷰수정</button>
            </div>


    </div>
</div>

<script>
    {
    const commentCreateBtn = document.querySelector("#review_update_btn");

    commentCreateBtn.addEventListener("click", function() {
    console.log("버튼을 클릭했습니다");

    const comment = {
   nickname: document.querySelector("#review_nickname").value,
   body: document.querySelector("#review_box").value,
   registerId: document.querySelector("#register_id").value
       };

   console.log(comment);
    });
    }
</script>
</body>

</html>
